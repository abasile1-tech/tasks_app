{% extends 'base.jinja' %}

{% block content %}

<form action="/tasks" method="post">
	<div>
		<label for="description">Description:</label>
		<input 
			type="text" 
			name="description" 
			id="description" 
			required 
			autofocus
		/>
	</div>
	<div>
		<label for="duration">Duration:</label>
		<input 
			type="number" 
			name="duration" 
			id="duration" 
			required 
		/>
	</div>
	<div>
		<label for="completed">Completed:</label>
		<input 
			type="checkbox" 
			name="completed" 
			id="completed"
		/>
	</div>
	<div>
		<label for="user_id">User:</label>
		<select name="user_id">
			{% for user in users %}
				<option value="{{ user.id }}">{{ user.first_name }}</option>
			{% endfor %}
		</select>
	</div>
	<button type="submit">Add Task</button>
</form>
	
{% endblock content %}

