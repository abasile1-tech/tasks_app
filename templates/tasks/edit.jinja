{% extends 'base.jinja' %}

{% block content %}

<h1>Edit: {{ task.description }}</h1>

<form action="/tasks/{{ task.id }}" method="post">
	<div>
		<label for="description">Description:</label>
		<input 
			type="text" 
			name="description" 
			id="description" 
			value="{{ task.description }}"
			required 
			autofocus
		/>
	</div>
	<div>
		<label for="duration">Duration:</label>
		<input 
			type="number" 
			name="duration" 
			id="duration" 
			value="{{ task.duration }}"
			required 
		/>
	</div>
	<div>
		<label for="completed">Completed:</label>
		<input 
			type="checkbox" 
			name="completed" 
			id="completed"
			{% if task.completed %}
				checked
			{% endif %}
		/>
	</div>
	<div>
		<label for="user_id">User:</label>
		<select name="user_id">
			{% for user in users %}
				<option 
					{% if task.user.id == user.id %}
						selected
					{% endif %} 
					value="{{ user.id }}"
				>
					{{ user.first_name }}
				</option>
			{% endfor %}
		</select>
	</div>
	<button type="submit">Update Task</button>
</form>
	
{% endblock content %}